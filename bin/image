#!/bin/bash

# GCP metadata
PROJECT=$(gcloud config get-value project)
IMAGE_NAME="twitter-to-pubsub-event-pump:0.4.3"

go mod tidy
go mod vendor

gcloud builds submit --tag "gcr.io/${PROJECT}/${IMAGE_NAME}"

